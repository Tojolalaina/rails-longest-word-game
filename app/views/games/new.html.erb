<h1> NEW GAME</h1>
<div class="letters_box">
  <% @letters.each do |letter| %>
  <div class="letter_box"><%= letter %></div>
  <% end %>
</div>
<p> what is a longuest word?</p>

<form action="/score" method="POST" class="form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <div class="input-group input-group">
    <input type="text" name="word" class="form-control">
    <span class="input-group-btn">
      <input type="submit" value="Play" class="btn btn-default">
    </span>
  </div>
</form>
